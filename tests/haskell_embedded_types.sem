%% The type of "v" is 'HaskTyp "CP Int"'
syntax {
	v in ${CP Bool};
	i in ${CP Int};
	boleanTruth in Truth ::= isTrue(v) | isFalse(v);
};

rules {
	rule "IsTrue" [ true = ${B.isTrue _'v} ] => [ isTrue(v) ];
	rule "IsFalse" [ true = ${B.isFalse _'v} ] => [ isFalse(v) ];
};


